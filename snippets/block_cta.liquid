<table width="540" cellpadding="0" cellspacing="0" border="0" class="container">
  <tr>
    <td align="{{ block.settings.alignment }}" valign="top">
      <a class="background-{{ block.settings.link_background | color_scheme_class }}" href="{{ block.settings.action }}" target="_blank" style="display: inline-block; margin: 10px 0; text-decoration:none;padding: 10px 30px;background-color: {{ block.settings.link_background }}" kjb-settings-id="{{ 'link_text' | settings_id: section: section, block: block }}">{{ block.settings.link_text }}</a>
    </td>
  </tr>
</table>
